<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/Switch_Cheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:enabled="false"
        />

    <Button
        android:id="@+id/Button_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="reverse"
        android:alpha="0"
        android:enabled="false"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/Switch_Cheat"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/scissors"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/imageView"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/scissors"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/Button_reverse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:gravity="start"
        android:text="reverse2"
        />

    <Switch
        android:id="@+id/Switch_Cheat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_alignBaseline="@id/Button_reverse2"
        android:alpha="0"
        />

</RelativeLayout>

